<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.heima.admin.dao.ChannelMapper">
    <select id="listAll" resultType="com.heima.model.admin.pojos.AdChannel">
        SELECT * FROM AdChannel
        WHERE name LIKE CONCAT('%', #{name}, '%')
        LIMIT #{offset}, #{size}
    </select>

</mapper>
